#importing libraries

import tensorflow as tf
import numpy as np
import web
import os
import time
import add_face2
import find_face2
import facenet

#declare variables
model="model-1792/model.pb"
#class_names=np.load('classnames2.npy')
#embeds=np.load('embed2.npy')
#labels=np.load('labels2.npy')
image_dir='static/images/'
find_dir='static/find_face/'

render = web.template.render('./templates/')
urls = ('/', 'index')
	

print("again")
app = web.application(urls, globals())


#initialize tensorflow grpah
graph = tf.Graph()   
with graph.as_default():
      
        #start a tensorflow session
	sess_config = tf.ConfigProto()
        sess_config.gpu_options.per_process_gpu_memory_fraction = 0.90
        with tf.Session(config=sess_config) as sess:
		
		
		
            	
		# Load the model
                print('Loading feature extraction model')
            	facenet.load_model(model)
   		
		#define index class
		class index:
			def GET(self): 
				#display index.html template				
				return render.index(None,None,None)

    			def POST(self):
				#save user inputs
        			i = web.input()
				# if add face form submit
				if i.form_name == "add_face":
        				files = web.webapi.rawinput().get('file1')
        				face_name = i.new_face_name
				
					#save images in a list		
        				if not isinstance(files, list):
        			    		files = [files]
	
					#save faces to images directory
        				os.mkdir(image_dir+face_name)
        				for f in files:
        			    		target = image_dir+face_name
        			    		content = f.file.read()
        			    		with open(target +'/'+ f.filename,'w') as f:
        			        		f.write(content)
        	    	
    					#add face to database/numpy
					global class_names 
					global labels
					global embeds
					st = time.time()					
					class_names,labels,embeds=add_face2.main(sess, graph, image_dir)
 					
					face=None
					find_image=None
					add_image=None
					
				
				# if recognize face form submit
				else :
					#save image to find_face directory
					files = web.webapi.rawinput().get('file2')
					content = files.file.read()
					target = find_dir + files.filename					
					with open(target, 'w') as f:
        			        	f.write(content)
        				
					# find face name from database
					st = time.time()
					face=find_face2.main(sess, graph, target, class_names, labels, embeds)
					print('Total time = {}'.format(time.time() - st))					
					add_image=None
					find_image=target
					
					# return to main page				
					#faces = ""
					#for i in range(face.size):
					#	faces += (face[i]+ " ") 
				return render.index(face, add_image, find_image)

if __name__=='__main__':

	print('name again')
	app.run()
	
 		
